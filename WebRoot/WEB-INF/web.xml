<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name></display-name>
	
	<!-- INIT SATRT -->
	<listener>
		<display-name>InitListener</display-name>
		<listener-class>com.jokerstation.webframe.init.Init</listener-class>
	</listener>
	<!-- INIT END -->

	<!-- FILTER START -->

	<!-- ENCODING FILTER START -->
	<filter>
		<filter-name>EcodingFilter</filter-name>
		<filter-class>com.jokerstation.webframe.filter.EncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>EcodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- ENCODING FILTER END -->
	
	<!-- SECURITY FILTER START -->
	<filter>
		<filter-name>WebFilter</filter-name>
		<filter-class>com.jokerstation.webframe.filter.WebFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>WebFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- SECURITY FILTER END -->
	
	<!-- SECURITY FILTER START -->
	<filter>
		<filter-name>ConsoleFilter</filter-name>
		<filter-class>com.jokerstation.webframe.filter.ConsoleFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ConsoleFilter</filter-name>
		<url-pattern>/console/*</url-pattern>
	</filter-mapping>
	<!-- SECURITY FILTER END -->
	
	<!-- ACTION FILTER START -->
	<filter>
		<filter-name>ActionFilter</filter-name>
		<filter-class>com.jokerstation.webframe.filter.ActionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ActionFilter</filter-name>
		<url-pattern>/console/*</url-pattern>
		<url-pattern>/console_check/*</url-pattern>
	</filter-mapping>
	<!-- ACTION FILTER END -->
	
	<!-- API FILTER START -->
	<filter>
		<filter-name>ApiFilter</filter-name>
		<filter-class>com.jokerstation.webframe.filter.ApiFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ApiFilter</filter-name>
		<url-pattern>/api/*</url-pattern>
	</filter-mapping>
	<!-- API FILTER END -->
	
	<!-- IMPORT STRUTS2 FILTER START -->
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>
			org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	<!-- IMPORT STRUTS2 FILTER END -->
	
	<!-- ERROR PAGE START -->
	<error-page>
		<error-code>404</error-code>
		<location>/error/404.jsp</location>
	</error-page>
	<!--  
	<error-page>
		<error-code>500</error-code>
		<location>/error/500.jsp</location>
	</error-page>
	-->
	<!-- ERROR PAGE END -->
	
	<session-config>
		<session-timeout>120</session-timeout>
	</session-config>
	
	<welcome-file-list>
    	<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
